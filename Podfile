# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'Movieaholic' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  
  # Biblioteca para requisições Http
  pod 'Alamofire',  '~> 4.7.3'
  # Biblioteca para cache de imagem
  pod 'AlamofireImage', '~> 3.4.1'
  # Modelagem de classe em JSON
  pod 'AlamofireObjectMapper', '~> 5.1.0'
  # Animações
  pod 'Fluky', '~> 1.0.0'
  
  # Pods for movieaholic
  target 'movieaholicTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'movieaholicUITests' do
    inherit! :search_paths
    # Pods for testing
  end
end
